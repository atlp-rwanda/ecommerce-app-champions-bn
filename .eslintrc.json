{
  "root": true,
  "extends": ["airbnb-base", "prettier"],
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "overrides": [],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier":"error",
    "one-var": "off",
    "one-var-declaration-per-line": "off",
    "new-cap": "off",
    "consistent-return": "off",
    "no-param-reassign": "off",
    "comma-dangle": "off",
    "import/no-named-as-default": "off",
    "no-console": "off",
    "curly": ["error", "multi-line"],
  }
}
